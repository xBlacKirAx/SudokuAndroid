<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sudokugroup.Sudoku.MainActivity">


    <sudokugroup.Sudoku.GameView
        android:id="@+id/MainView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/btndplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="difficulty+"></Button>

        <Button
            android:id="@+id/btndminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btndplus"
            android:layout_toRightOf="@id/btndplus"
            android:text="difficulty-"></Button>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/btnhint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hint!"></Button>

        <Button
            android:id="@+id/btnreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnhint"
            android:layout_toRightOf="@id/btnhint"
            android:text="reset"></Button>

    </RelativeLayout>


    >
</RelativeLayout>
